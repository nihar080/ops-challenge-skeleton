[Unit]
Description=Gaia Daemon
After=network-online.target

[Service]
ExecStart={{ home_dir }}/go/bin/gaiad start --x-crisis-skip-assert-invariants
Restart=always
RestartSec=3
LimitNOFILE=4096
User={{ node_user }}
Group={{ node_user }}
SyslogIdentifier=COSMOS-NODE-{{ node_name }}

[Install]
WantedBy=multi-user.target